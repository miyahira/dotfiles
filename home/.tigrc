set blame-view  = date:local author:full file-name:auto id:yes,color line-number:no,interval=5 text
set grep-view   = file-name:no line-number:yes,interval=1 text
set main-view   = line-number:no,interval=5 id:no date:local author:full commit-title:yes,graph,refs,overflow=no
set refs-view   = date:local author:full ref commit-title
set stash-view  = line-number:no,interval=5 id:no date:local author:full commit-title
set status-view = line-number:no,interval=5 status:short file-name
set tree-view   = line-number:no,interval=5 mode author:full file-size date:local id:no file-name


